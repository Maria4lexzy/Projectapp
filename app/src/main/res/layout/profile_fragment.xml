<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layout_margin="10dp"
  >


    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_profile_email"
        android:layout_alignParentStart="true"
              android:fontFamily="@font/arvo_bold"
        android:text="@string/profile_fragment"

        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimary"
        android:textSize="30sp"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/arvo_bold"
        android:text="@string/profile_fragment"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorPrimary"

        android:background="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_profile_name"
        android:padding="10dp"
        app:layout_constraintVertical_bias="0.059" />

    <Button
        android:id="@+id/profile_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="10dp"

        android:background="@color/colorAccent"
        android:layout_marginBottom="436dp"
        android:fontFamily="@font/lobster_two_bold_italic"
        android:text="Log out"
        android:textColor="@color/bonesDarkRed"


        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>