<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"

    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="100dp"

        android:fontFamily="@font/lobster_two_bold_italic"
        android:gravity="center"
        android:paddingBottom="15dp"
        android:text="@string/logged_in_as"
        android:textAlignment="center"
        android:textColor="@color/bonesWhite"
        android:textSize="35sp"></TextView>

    <TextView
        android:id="@+id/tv_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="155dp"
android:paddingBottom="10dp"
        android:fontFamily="@font/arvo_bold"
        android:text="@string/user_name"
        android:textColor="@color/bonesWhite"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
android:paddingBottom="10dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="195dp"
        android:fontFamily="@font/arvo_bold"
        android:text="@string/user_email"
        android:textColor="@color/bonesWhite"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp" />

    <Button
        android:id="@+id/profile_sign_out"
        style="@style/button_styles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="231dp"
        android:layout_marginEnd="30dp"
        android:text="@string/sign_out"
        android:textSize="30sp" />
</RelativeLayout>